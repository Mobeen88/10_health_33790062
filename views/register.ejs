<!doctype html>
<html>
  <head>
    <title><%=shopData.shopName%></title>    
    <link rel="stylesheet" type="text/css" href="/style.css" />
  </head>
  <body>
    <%- include("header") %>
    <h1>Register</h1>

    <% if (errors && errors.length > 0) { %>
      <div style="color: red;">
        <ul>
          <% errors.forEach(function(err) { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (message) { %>
      <p style="color: green;"><%= message %></p>
    <% } %>

    <form method="POST" action="/users/register">
      <p>First Name: <input type="text" name="first_name" value="<%= old ? old.first : '' %>" /></p>
      <p>Last Name: <input type="text" name="last_name" value="<%= old ? old.last : '' %>" /></p>
      <p>Email: <input type="email" name="email" value="<%= old ? old.email : '' %>" /></p>
      <p>Username: <input type="text" name="username" value="<%= old ? old.username : '' %>" /></p>
      <p>Password: <input type="password" name="password" /></p>
      <input type="submit" value="Register" />
    </form>

    <p><a href="/users/login">Login</a></p>
    <p><a href="/">Back to Home</a></p>
  </body>
</html>
